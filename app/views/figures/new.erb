<form action="/figures" method="POST">
  <label>Figure Name:</label><input type="text" name="figure[name]"><br>
  <h3>Titles</h3>
    <% Title.all.each do |title| %>
      <label><%=title.name%></label>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id %>"><br>
    <%end%>
  <label>Create New Title:</label><input type="text" name="title[name]">

<h3>Landmarks</h3>
  <% Landmark.all.each do |landmark| %>
  <label><%=landmark.name%>
    <input type="checkbox" id = "landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><br>
    <%end%>
  <label>Create New Landmark</label><input type='text' name="landmark[name]"><br>
  <label>Year Completed:</label><input type="text" name="landmark[year_completed]"><br>

  <input type="submit" value="Create New Figure">
</form>
